{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS", // Alterado de "ESNext"
    "moduleResolution": "Node", // Alterado de "Bundler" e "NodeNext"
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // Adicionado
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "outDir": "dist",
    "baseUrl": "src"
  },
  "include": ["src", "../reserveai-app/screens"]
}